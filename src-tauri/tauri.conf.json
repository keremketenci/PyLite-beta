{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "PyLite",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "bin/python/pseudo_generator",
            "args": true,
            "sidecar": true
          },
          {
            "name": "bin/python/flowchart_generator",
            "args": true,
            "sidecar": true
          },
          {
            "name": "bin/python/dfd_generator",
            "args": true,
            "sidecar": true
          },
          {
            "name": "bin/python/datadict_generator",
            "args": true,
            "sidecar": true
          }
        ]
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "PyLite-beta",
        "width": 800,
        "minWidth": 600,
        "height": 600,
        "minHeight": 400,
        "decorations": false,
        "transparent": true,
        "fileDropEnabled": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev.PyLite-beta",
      "externalBin": ["bin/python/pseudo_generator", "bin/python/flowchart_generator", "bin/python/dfd_generator", "bin/python/datadict_generator"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
